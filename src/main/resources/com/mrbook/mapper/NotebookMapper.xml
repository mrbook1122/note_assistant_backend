<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrbook.mapper.NotebookMapper">
    <insert id="save">
        insert into notebook (update_time, status, name, user_id)
        values (#{updateTime}, #{status}, #{name}, #{user.id})
    </insert>
    <resultMap id="notebookResultMap" type="notebook">
        <id property="id" column="id"/>
        <result property="updateTime" column="update_time" jdbcType="TIME"/>
        <result property="status" column="status"/>
        <result property="name" column="name"/>
    </resultMap>
    <select id="getById" resultType="notebook">
        select * from notebook where id = #{id}
    </select>
</mapper>